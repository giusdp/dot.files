[colors]
background = ${xrdb:color0:#222}
;background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
bg = ${xrdb:color0:#1F2D3A}
fg = ${xrdb:color7:#2AA198}
foreground = ${xrdb:color7:#2AA198}
icon_color = ${xrdb:color12:#2AA198}
battery_p_bg = ${xrdb:color9}

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
monitor = ${env:MONITOR:eDP-1}
width = 1366
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = ypn envypn:pixelsize=11;2
font-1 = ypn envypn:fontformat=truetype:size=11:antialias=false;3
font-2 = ypn envypn:pixelsize=11;2
font-3 = FontAwesome:size=9;2
font-4 = Unifont Upper:pixelsize=11;2
font-5 = symbols:pixelsize=10;2
font-6 = FuraMono Nerd Font Mono:pixelsize=14;4
font-7 = Unifont:pixelsize=14;2

modules-left = xwindow 
modules-center = i3
modules-right = memory cpu temperature battery date

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}
tray-offset-x = 0

;wm-restack = bspwm

override-redirect = false

;wm-restack = i3

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext

;--------------------------------------------
; modules                                   ;
;--------------------------------------------
[module/network]
type = internal/network
interface = wlp3s0
interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid%
label-connected-foreground = ${colors.icon_color}

label-disconnected = Not Connected
label-disconnected-foreground = ${colors.icon_color}

click-left = nm-connection-editor

[module/xwindow]
y-offset      = 10
type          = internal/xwindow
format        = <label>
label         = %title:0:50:%
label-padding = 2

[module/battery]	
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging = <label-charging>

format-charging-prefix = "BAT "
format-charging-prefix-foreground = ${colors.icon_color}
label-charging            = "%percentage%%"
;label-charging-background =  ${colors.background}
;label-charging-foreground =  ${colors.icon_color}
;label-charging-padding    = 0

format-discharging = <label-discharging>

format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${colors.battery_p_bg}
;format-discharging-prefix-foreground = ${xrdb:color6}
label-discharging            = "%percentage%%"
label-discharging-background =  ${colors.background}
;label-discharging-foreground = ${colors.battery_p_bg}
;label-discharging-padding    = 0

format-full = <label-full>

format-full-prefix     = "BAT "
label-full            = "%percentage%%"
label-full-background =  ${colors.background}
label-full-foreground =  ${colors.foreground}
;label-full-padding    = 0

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

#label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-mounted = root: %used%/%total%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-3 = 4;
;ws-icon-4 = 5;
;ws-icon-5 = 6;;
;ws-icon-default =  

; focused = Active workspace on focused monitor
;label-focused = %icon%
label-focused-foreground = ${colors.icon_color}
label-focused-background = ${colors.bg}
label-focused-underline = ${colors.bg}
label-focused-padding = 1.5
;${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
;label-unfocused = %icon%
label-unfocused-padding = 1.5
;${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
;label-visible = %icon%
label-visible-foreground = ${colors.icon_color}
label-visible-background = ${colors.bg}
label-visible-underline = ${colors.bg}
label-visible-padding = 1.5
;${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = 1.5
;${module/bspwm.label-urgent-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.icon_color}
;format-underline = #f90000
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.icon_color}
;format-underline = #4bffdc
label = %gb_used% 

[module/date]
type = internal/date
interval = 1

date = "%a, %d/%m"
date-alt = %m/%d/%Y

time = %I:%M %p
time-alt = %I:%M:%S %p

;format-prefix = "| "
format-prefix-foreground = ${colors.fg}
;format-underline = #0a6cf5

format = <label>
format-foreground = ${colors.fg}
label = %date% %time%
label-font = 0

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
;format-underline = #f50a4d
format-warn = <ramp> <label-warn>
;format-warn-underline = ${self.format-underline}

format-prefix = TEMP
format-prefix-foreground = ${colors.icon_color}
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over


[global/wm]
margin-top = 500
margin-bottom = 0

